{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2020"]
  },
  "ts-node": {
    "esm": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}